{
    "compilerOptions": {
      "target": "ES2020", 
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": false,
      "declaration": true, 
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}